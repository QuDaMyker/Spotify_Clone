<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neutral_black_color"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_history_today_recycle_view_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/image_radius"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundImageView"
        app:srcCompat="@drawable/img_hit_1" />

    <TextView
        android:id="@+id/item_history_today_recycle_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:ellipsize="end"
        android:fontFamily="@font/montserratsemibold"
        android:maxLines="1"
        android:text="Happiers"
        android:textColor="@color/neutral_white_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_history_today_recycle_view_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279" />

    <TextView
        android:id="@+id/item_history_today_recycle_view_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:ellipsize="end"
        android:fontFamily="@font/montserratlight"
        android:maxLines="1"
        android:text="Playlist"
        android:textColor="@color/neutral_white_color"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_history_today_recycle_view_img"
        app:layout_constraintTop_toBottomOf="@+id/item_history_today_recycle_view_title" />

    <ImageView
        android:id="@+id/item_history_today_recycle_view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_more_vert_30" />


</androidx.constraintlayout.widget.ConstraintLayout>