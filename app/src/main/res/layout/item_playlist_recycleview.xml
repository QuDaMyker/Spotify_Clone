<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/neutral_black_color">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_playlist_recycle_view_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundImageView"
        app:srcCompat="@drawable/img_album_1" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/item_playlist_recycle_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratsemibold"
        android:text="Liked Songs"
        android:textColor="@color/neutral_white_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/item_playlist_recycle_view_image"
        app:layout_constraintTop_toBottomOf="@+id/item_playlist_recycle_view_image" />

    <TextView
        android:id="@+id/item_playlist_recycle_view_countSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratsemibold"
        android:text="128 songs"
        android:textColor="@color/text_gray_color"
        app:layout_constraintStart_toStartOf="@+id/item_playlist_recycle_view_title"
        app:layout_constraintTop_toBottomOf="@+id/item_playlist_recycle_view_title" />

</androidx.constraintlayout.widget.ConstraintLayout>