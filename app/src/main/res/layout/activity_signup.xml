<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_black_color"
    android:orientation="vertical"
    tools:context=".Activity.Signup_Activity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="133.26dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash_logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/getstarted_center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_signup_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_green"
            android:text="Sign up free"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_phone_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_trans"
            android:text="Continue with phone number"
            android:drawableTint="@color/neutral_white_color"
            android:drawableLeft="@drawable/baseline_smartphone_24"
            android:drawablePadding="5dp"
            android:textColor="@color/neutral_white_color"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_google_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_trans"
            android:text="Continue with Google"
            android:textColor="@color/neutral_white_color"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_facebook_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_trans"
            android:text="Continue with Facebook"
            android:textColor="@color/neutral_white_color"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>